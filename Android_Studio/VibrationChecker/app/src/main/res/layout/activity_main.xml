<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_gradient"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="Check Your Vibration!!"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#74EC41DE"
            android:padding="10sp"
            android:layout_margin="10sp"
            android:text="Normal Vibration"
            android:onClick="normalVibration"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#74EC41DE"
            android:padding="10sp"
            android:layout_margin="10sp"
            android:text="Click Vibration"
            android:onClick="clickVibration"/>

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#74EC41DE"
            android:padding="10sp"
            android:layout_margin="10sp"
            android:text=" Double Click Vibration"
            android:onClick="doubleClickVibration"/>

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#74EC41DE"
            android:padding="10sp"
            android:layout_margin="10sp"
            android:text="TIck effect"
            android:onClick="tickEffectVibration"
            />

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#74EC41DE"
            android:padding="10sp"
            android:layout_margin="10sp"
            android:text="Heavy Click"
            android:onClick="heavyClickVibration"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>